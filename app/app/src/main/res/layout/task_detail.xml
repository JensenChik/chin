<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="20dp"
    android:stretchColumns="1">

    <TableRow>

        <TextView
            android:text="任务ID"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/task_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp" />
    </TableRow>

    <TableRow>

        <TextView
            android:text="任务名"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/task_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp" />
    </TableRow>

    <TableRow>

        <TextView
            android:text="创建时间"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp" />
    </TableRow>

    <TableRow>

        <TextView
            android:text="执行命令"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/command"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp" />
    </TableRow>

    <TableRow>

        <TextView
            android:text="优先级"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp" />
    </TableRow>

    <TableRow>

        <TextView
            android:text="机器池"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/machine_pool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp" />
    </TableRow>

    <TableRow>

        <TextView
            android:text="父任务"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/father_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp" />
    </TableRow>

    <TableRow>

        <TextView
            android:text="子任务"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/child_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp" />
    </TableRow>

    <TableRow>

        <TextView
            android:text="是否启用"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/valid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp" />
    </TableRow>

    <TableRow>

        <TextView
            android:text="失败后是否重跑"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/rerun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp" />
    </TableRow>

    <TableRow>

        <TextView
            android:text="重跑次数"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/rerun_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp" />
    </TableRow>

    <TableRow>

        <TextView
            android:text="调度周期"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/scheduled_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp" />
    </TableRow>

    <TableRow>

        <TextView
            android:text="调度时间"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/scheduled_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp" />
    </TableRow>
</TableLayout>